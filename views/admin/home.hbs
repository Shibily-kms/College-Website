{{!-- active button --}}
<script>
    var current = document.getElementById('Home').className = "main-item active-main"
</script>

{{!-- --}}
<section id="admin-container" class="admin-container">
    {{#if activation}}
    {{else}}
    <div class="warnning-bar activation-bar" style="margin-bottom: 10px;">
        <div class="col1">
            <h5><i class="bi bi-exclamation-triangle-fill"></i> First, click the Activate button to active all pages
            </h5>
        </div>
        <div class="col2">
            <Button class="btn-sm" id="active-button" onclick="activation()">Activate</Button>
        </div>
    </div>
    {{/if}}
    <div class="admin-top-bar">
        <p>Admin ID : <span class="id">{{admin.deviceId}}</span></p>
        <p class="network"><i class="bi bi-record-fill"></i> Network</p>

    </div>
    <div class="four-tab">

        <div class="tab-item">
            <div class="item-boarder">
                <div class="row-1">
                    <h2><i class="bi bi-cone-striped"></i><span> {{VisiterCount.MillionView}}</span></h2>
                </div>
                <div class="row-2">
                    <h5>Visitors</h5>
                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="row-1">
                    <h2><i class="bi bi-patch-check-fill"></i><span> {{SubscriberCount.MillionView}}</span></h2>
                </div>
                <div class="row-2">
                    <h5>Subscribers</h5>
                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="row-1">
                    <h2><i class="bi bi-envelope-paper-fill"></i><span> {{MessageCount}}</span></h2>
                </div>
                <div class="row-2">
                    <h5>Messages</h5>
                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="row-1">
                    <h2><i class="bi bi-fingerprint"></i><span> {{adminCount}}</span></h2>
                </div>
                <div class="row-2">
                    <h5>Admin logs</h5>
                </div>
            </div>
        </div>

    </div>

    {{!-- .............. --}}
    <div class="four-tab">


        <div class="tab-item">
            <div class="item-boarder">
                <div class="top">
                    <h5>Visitors</h5>
                    <h4>{{VisiterCount.TotalCount}}</h4>
                </div>
                <div class="list">
                    <div class="item">
                        <h5>Today</h5>
                        <h5>{{VisiterCount.TodayCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last 7 Days</h5>
                        <h5>{{VisiterCount.WeekCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last Month</h5>
                        <h5>{{VisiterCount.MonthCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last Year</h5>
                        <h5>{{VisiterCount.YearCount}}</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="top">
                    <h5>Subscribers</h5>
                    <h4>{{SubscriberCount.TotalCount}}</h4>
                </div>
                <div class="list">
                    <div class="item">
                        <h5>Today</h5>
                        <h5>{{SubscriberCount.TodayCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last 7 Days</h5>
                        <h5>{{SubscriberCount.WeekCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last Month</h5>
                        <h5>{{SubscriberCount.MonthCount}}</h5>
                    </div>
                    <div class="item">
                        <h5>Last Year</h5>
                        <h5>{{SubscriberCount.YearCount}}</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="top">
                    <h4>Top 4</h4>
                    <h5>Status frame </h5>
                </div>
                <div class="list">
                    {{#if StatusFrame.[0]}}
                    {{#each StatusFrame}}
                    <div class="item">
                        <h5>{{#if this.Header}} {{this.Header}} {{else}} ID / {{this.Id}} {{/if}} </h5>
                        <h5>{{this.Count}}</h5>
                    </div>
                    {{/each}}
                    {{else}}
                    <div style="justify-content : center; height: 130px; align-items:center;" class="item">
                        <h5 style="color:var(--color-c-black); font-weight: normal;">No items</h5>
                    </div>
                    {{/if}}

                </div>
            </div>
        </div>
        <div class="tab-item">
            <div class="item-boarder">
                <div class="top">
                    <h4 id="day-bar-date">MM DD YYYY</h4>
                    <h5 id="day-bar">Today</h5>
                </div>
                <div class="list">
                    {{#if DayBar.Title}}
                    <div style="justify-content : center; height: 130px; align-items:center;" class="item">
                        <h5 style="color:var(--color-c-black); font-weight: normal; text-align:center;">{{DayBar.Title}}</h5>
                    </div>
                    {{else}}
                    <div style="justify-content : center; height: 130px; align-items:center;" class="item">
                        <h5 style="color:var(--color-c-black); font-weight: normal;">No items</h5>
                    </div>
                    {{/if}}

                </div>
            </div>
        </div>
        
      
    </div>
    <div id="loading-gif" style="display: none;" class="loading-gif">
        <img src="/images/gif/loading-2.gif" alt="">
    </div>

</section>

<script>
    let TodayBar = document.getElementById('day-bar-date')
    let dayBar = document.getElementById('day-bar')
    let today = new Date().toLocaleDateString('en-us', { year: "numeric", month: "short", day: "numeric" })
    let day = new Date().toLocaleDateString('en-us', { weekday: "long", })
    TodayBar.innerHTML = today
    dayBar.innerHTML = day

</script>





<script>
    function activation() {
        let button = document.getElementById('active-button')
        let gif = document.getElementById('loading-gif')
        gif.style.display = 'flex'
        button.innerHTML = "wait"

    }
</script>