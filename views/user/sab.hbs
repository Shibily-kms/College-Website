<section class="our-teacher">
    <div class="main-title title-image">
        <h1>SOCIAL AFFAIRS BOARD</h1>
    </div>
</section>
<section class="container" style="margin-top: -90px;">
    {{!-- NSA content --}}
    <div class="content-div {{#if adminHere}} edit-boarder {{/if}}">
        {{#if adminHere}} <a class="admin-edit edit-icon-content" data-title="Edit" href="/admin/nsa/sab-about"
            target="_blank"><i class="bi bi-pencil-fill"></i></a> {{/if}}
        <h3 class="header" id="Header">{{Sab.Header}}</h3>
        <p class="perag">{{Sab.Para1}}</p>
        <p class="perag">{{Sab.Para2}}</p>
        <p class="perag">{{Sab.Para3}}</p>
        <p class="perag">{{Sab.Para4}}</p>
        <p class="perag">{{Sab.Para5}}</p>
        
        <div class="pera-buttens">
            {{#if Sab.Btn1.Name}}
            <a href="{{Sab.Btn1.Link}}" {{#if Sab.Btn1.New}} target="_blank" {{/if}}><button class="btn-lg">{{Sab.Btn1.Name}} {{#if Sab.Btn1.New}} <i class="bi bi-arrow-up-right"></i> {{/if}} </button></a>
            {{/if}}
            {{#if Sab.Btn2.Name}}
            <a href="{{Sab.Btn2.Link}}" {{#if Sab.Btn2.New}} target="_blank" {{/if}}><button class="btn-lg">{{Sab.Btn2.Name}} {{#if Sab.Btn2.New}} <i class="bi bi-arrow-up-right"></i> {{/if}} </button></a>
            {{/if}}
            
        </div>
        
    </div>

    <div style="margin-top: 0;" class="four-profile {{#if adminHere}} edit-boarder {{/if}}">
        {{#if adminHere}} <a class="admin-edit edit-icon-content" href="/admin/nsa/sab-members" data-title="Edit"
            target="_blank"><i class="bi bi-pencil-fill"></i></a> {{/if}}

        {{!-- 25% --}}

        {{#each SabPro}}
        <div id="foru-profile" class="profile ">
            <div>
                <div class="image">
                    <img src="/images/profiles/{{this.Id}}.jpg" alt="">
                </div>
                <div class="content">
                    <h4>{{this.FullName}}</h4>
                    <p>- {{this.Position}} -</p>
                    <hr>
                    <p>{{this.Address}}</p>
                    <p>{{this.Mobile}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>




</section>


